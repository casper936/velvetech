<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<section id="page-title">
  <div class="row">
    <div class="col-sm-8">
      <h1 class="mainTitle">Users tables</h1>
    </div>
    <ol class="breadcrumb">
      <li>
        <span>Users</span>
      </li>
      <li class="active">
        <span>Manage users</span>
      </li>
    </ol>
  </div>
</section>
<!-- end: PAGE TITLE -->

<!-- start: STRIPED ROWS -->
<div class="container-fluid container-fullw">
  <div class="row">
    <div class="col-md-12">
      <h5 class="over-title margin-bottom-15">Manage <span class="text-bold">users</span></h5>
      <table class="table table-striped table-hover" id="sample-table-2">
        <thead>
        <tr>
          <th>Full Name</th>
          <th class="hidden-xs">Role</th>
          <th class="hidden-xs">Email</th>
          <th class="hidden-xs">Phone</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td class="hidden-xs">System Administrator</td>
          <td class="hidden-xs">
              <%= user.email %>
          </td>
          <td class="hidden-xs">(641)-734-4763</td>
          <td class="center">
            <div class="visible-md visible-lg hidden-sm hidden-xs">
              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_user_path(user), class: 'btn btn-transparent btn-xs' %>
              <%= link_to '<i class="fa fa-eye"></i>'.html_safe, user, class: 'btn btn-transparent btn-xs tooltips' %>
              <%= link_to '<i class="fa fa-times fa fa-white"></i>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-transparent btn-xs tooltips' %>
            </div>
            <div class="visible-xs visible-sm hidden-md hidden-lg">
              <div class="btn-group" dropdown>
                <button type="button" class="btn btn-primary btn-sm dropdown-toggle" dropdown-toggle>
                  <i class="fa fa-cog"></i>&nbsp;<span class="caret"></span>
                </button>
                <ul class="dropdown-menu pull-right dropdown-light" role="menu">
                  <li>
                    <a href="#">
                      Edit
                    </a>
                  </li>
                  <li>
                    <a href="#">
                      Share
                    </a>
                  </li>
                  <li>
                    <a href="#">
                      Remove
                    </a>
                  </li>
                </ul>
              </div>
            </div></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- end: STRIPED ROWS -->
