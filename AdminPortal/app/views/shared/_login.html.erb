<!DOCTYPE html>
<html>
<head>
  <title>AdminPortal</title>
  <%= csrf_meta_tags %>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">

  <!-- start: GOOGLE FONTS -->
  <link href="http://fonts.googleapis.com/css?family=Lato:300,400,400italic,600,700|Raleway:300,400,500,600,700|Crete+Round:400italic" rel="stylesheet" type="text/css" />
  <!-- end: GOOGLE FONTS -->
  <!-- start: MAIN CSS -->
  <%= stylesheet_link_tag '/assets/bootstrap.min', media: "all", 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag '/assets/font-awesome.min', media: "all", 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag '/assets/themify-icons.min', media: "all", 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag '/assets/animate.min', media: "screen", 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag '/assets/perfect-scrollbar.min', media: "screen", 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag '/assets/switchery.min', media: "screen", 'data-turbolinks-track': 'reload' %>

  <%= stylesheet_link_tag '/assets/styles', media: "all", 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag '/assets/plugins', media: "all", 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag '/assets/theme-5', media: "all", 'data-turbolinks-track': 'reload' %>
  <!-- end: MAIN CSS -->

  <%= stylesheet_link_tag '/assets/select2.min', media: "all", 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag '/assets/DT_bootstrap', media: "all", 'data-turbolinks-track': 'reload' %>

</head>
<!-- end: HEAD -->
<!-- start: BODY -->
<body class="login">
<!-- start: REGISTRATION -->
<div class="row">
  <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <div class="logo margin-top-30">
      <img src="/assets/images/logo/logo.png" alt="Clip-Two"/>
    </div>
    <!-- start: REGISTER BOX -->
    <div class="box-register">
      <form class="form-register">
        <fieldset>
          <legend>
            Sign Up
          </legend>
          <p>
            Enter your personal details below:
          </p>
          <div class="form-group">
            <input type="text" class="form-control" name="full_name" placeholder="Full Name">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="address" placeholder="Address">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="city" placeholder="City">
          </div>
          <div class="form-group">
            <label class="block">
              Gender
            </label>
            <div class="clip-radio radio-primary">
              <input type="radio" id="rg-female" name="gender" value="female">
              <label for="rg-female">
                Female
              </label>
              <input type="radio" id="rg-male" name="gender" value="male">
              <label for="rg-male">
                Male
              </label>
            </div>
          </div>
          <p>
            Enter your account details below:
          </p>
          <div class="form-group">
								<span class="input-icon">
									<input type="email" class="form-control" name="email" placeholder="Email">
									<i class="fa fa-envelope"></i> </span>
          </div>
          <div class="form-group">
								<span class="input-icon">
									<input type="password" class="form-control" id="password" name="password" placeholder="Password">
									<i class="fa fa-lock"></i> </span>
          </div>
          <div class="form-group">
								<span class="input-icon">
									<input type="password" class="form-control" name="password_again" placeholder="Password Again">
									<i class="fa fa-lock"></i> </span>
          </div>
          <div class="form-group">
            <div class="checkbox clip-check check-primary">
              <input type="checkbox" id="agree" value="agree">
              <label for="agree">
                I agree
              </label>
            </div>
          </div>
          <div class="form-actions">
            <p>
              Already have an account?
              <a href="login_signin.html">
                Log-in
              </a>
            </p>
            <button type="submit" class="btn btn-primary pull-right">
              Submit <i class="fa fa-arrow-circle-right"></i>
            </button>
          </div>
        </fieldset>
      </form>
      <!-- start: COPYRIGHT -->
      <div class="copyright">
        &copy; <span class="current-year"></span><span class="text-bold text-uppercase"> ClipTheme</span>. <span>All rights reserved</span>
      </div>
      <!-- end: COPYRIGHT -->
    </div>
    <!-- end: REGISTER BOX -->
  </div>
</div>
<!-- end: REGISTRATION -->
<!-- start: MAIN JAVASCRIPTS -->
<%= render 'shared/mainjs' %>
<!-- end: MAIN JAVASCRIPTS -->
<!-- start: JAVASCRIPTS REQUIRED FOR THIS PAGE ONLY -->
<%= javascript_include_tag '/assets/jquery.validate.min' %>
<!-- end: JAVASCRIPTS REQUIRED FOR THIS PAGE ONLY -->
<!-- start: CLIP-TWO JAVASCRIPTS -->
<!-- start: JavaScript Event Handlers for this page -->
<%= javascript_include_tag '/assets/login' %>
<script>
  jQuery(document).ready(function() {
    Main.init();
    Login.init();
  });
</script>
<!-- end: JavaScript Event Handlers for this page -->
<!-- end: CLIP-TWO JAVASCRIPTS -->
</body>
<!-- end: BODY -->
</html>